<% include ../partials/header %>
<div style="background:#e9ecef;">
  <b>Navigation</b> - &nbsp; <a href="http://localhost:3000" style="text-decoration: none;">Home</a> /
  <a href="../../books" style="text-decoration: none;">Books</a> /
  <button type="submit" class="btn btn-warning">New</button>

</div><br/>
<section>
  <form action="/books" method="post">
    <fieldset>
      <legend>Book Information</legend>
      <div class="form-group">
        <label for="name">Name</label>
        <input type="text" class="form-control" id="name" name="name" placeholder="Book name" required>
      </div>
      <div class="form-group">
        <label for="author">Author</label>
        <input type="text" class="form-control" id="author" name="author" placeholder="Author name" required>
      </div>
      <div class="form-group">
        <label for="releaseyear">Year</label>
        <input type="text" class="form-control" id="year" name="year" placeholder="Book year" required>
      </div>

      <div class="form-group">
        <label for="price">Price</label>
        <div class="input-group">
          <div class="input-group-prepend">
            <div class="input-group-text">$</div>
          </div>
          <input type="number" class="form-control" id="price" name="price" placeholder="10.00" step="0.01" min="0" required>
        </div>
      </div>
    </fieldset>
    <div class="form-group">
      <button type="submit" class="btn btn-primary">Create Book</button>
    </div>
  </form>
</section>
